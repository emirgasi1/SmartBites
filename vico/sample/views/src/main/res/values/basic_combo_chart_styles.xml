<resources>
    <style name="BasicComboChartColumnStyle">
        <item name="android:color">#ffc002</item>
    </style>

    <style name="BasicComboChartColumnLayerStyle">
        <item name="column1Style">@style/BasicComboChartColumnStyle</item>
    </style>

    <style name="BasicComboChartLineStyle">
        <item name="android:color">#ee2b2b</item>
    </style>

    <style name="BasicComboChartLineLayerStyle">
        <item name="line1Style">@style/BasicComboChartLineStyle</item>
    </style>

    <style name="BasicComboChartChartStyle">
        <item name="columnLayerStyle">@style/BasicComboChartColumnLayerStyle</item>
        <item name="layers">column|line</item>
        <item name="lineLayerStyle">@style/BasicComboChartLineLayerStyle</item>
        <item name="showBottomAxis">true</item>
        <item name="showStartAxis">true</item>
    </style>
</resources>
